# Smart Doctor Assistant - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/smart_doctor

# ========================================
# Email Configuration (Gmail SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password

# ========================================
# LLM Provider Configuration
# ========================================
LLM_PROVIDER=ollama
# Options: ollama, groq, together, huggingface

# Ollama (Local, Free)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Groq (Cloud, Free Tier - Recommended for Speed)
GROQ_API_KEY=your-groq-api-key-here

# Together AI (Cloud, Free Tier)
TOGETHER_API_KEY=your-together-api-key-here

# Hugging Face (Cloud, Free Tier)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# ========================================
# Security Configuration
# ========================================
SECRET_KEY=change-this-to-random-32-char-string
JWT_SECRET=change-this-to-random-32-char-jwt-secret
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Session Configuration
SESSION_TIMEOUT_MINUTES=30

# ========================================
# Application Configuration
# ========================================
ENVIRONMENT=development
# Options: development, production, staging

DEBUG=true
# Set to false in production

LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ========================================
# Frontend Configuration
# ========================================
VITE_API_URL=http://localhost:8000

# ========================================
# Production Settings (Optional)
# ========================================
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
# REDIS_URL=redis://localhost:6379/0
# MAX_UPLOAD_SIZE_MB=10
