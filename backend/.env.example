# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smart_doctor_db

# ============ FREE LLM OPTIONS ============
# Option 1: Ollama (100% FREE - Local, No API Key needed)
# Download from: https://ollama.ai
# Run: ollama pull llama2 or ollama pull mistral
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Option 2: Groq (FREE Cloud API - Fast inference)
# Get free key from: https://console.groq.com
# LLM_PROVIDER=groq
# GROQ_API_KEY=your_free_groq_api_key_here

# Option 3: Together AI (FREE Tier)
# Get free key from: https://api.together.xyz
# LLM_PROVIDER=together
# TOGETHER_API_KEY=your_free_together_api_key_here

# Option 4: Hugging Face (FREE)
# Get free key from: https://huggingface.co/settings/tokens
# LLM_PROVIDER=huggingface
# HUGGINGFACE_API_KEY=your_free_hf_api_key_here

# ============ FREE EMAIL (Gmail SMTP) ============
# Use your Gmail account (100% FREE)
# Enable "App Passwords" in Google Account settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_gmail_address_here
SMTP_PASSWORD=your_app_password_here   
SENDER_EMAIL=your_gmail_address_here

# ============ FREE NOTIFICATIONS ============
# Option 1: Discord Webhook (100% FREE)
# Create webhook in Discord server settings
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Option 2: Telegram Bot (FREE)
# Create bot with @BotFather on Telegram
# TELEGRAM_BOT_TOKEN=your_bot_token_here
# TELEGRAM_CHAT_ID=your_chat_id_here

# ============ GOOGLE CALENDAR (FREE) ============
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=token.json

# ============ APPLICATION SETTINGS ============
APP_ENV=development
DEBUG=true
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# MCP Settings
MCP_ENABLED=true
MAX_TOOL_ITERATIONS=5
